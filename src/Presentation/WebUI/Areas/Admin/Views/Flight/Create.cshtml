@model FlightViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label for="Flight_AirplaneId">Airplane</label>
        <select id="Flight_AirplaneId" asp-for="SelectedAirplaneId"  class="form-control" required>
            @foreach (var airplane in Model.Airplanes)
            {
                <option value="@airplane.AirplaneId">
                    @airplane.AirplaneName
                </option>
            }
        </select>
        <span asp-validation-for="SelectedAirplaneId" class="text text-danger"></span>

    </div>

   <div class="form-group">
        <label for="Flight_DepartureAirportId">Departure Airport</label>
        <select id="Flight_DepartureAirportId" asp-for="SelectedDepartureAirportId" class="form-control" required>
            @foreach (var airport in Model.Airports)
            {
                <option value="@airport.AirportId"  >
                    @airport.AirportName
                </option>
            }
        </select>
        <span asp-validation-for="SelectedDepartureAirportId" class="text text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Flight_DestinationAirportId">Destination Airport</label>
        <select id="Flight_DestinationAirportId" asp-for="SelectedDestinationAirportId" class="form-control" required>
            @foreach (var airport in Model.Airports)
            {
                <option value="@airport.AirportId">
                    @airport.AirportName
                </option>
            }
        </select>
        <span asp-validation-for="SelectedDestinationAirportId" class="text text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Flight_EconomyPrice">Economy Price</label>
        <input type="number" id="Flight_EconomyPrice" class="form-control" asp-for="EconomyPrice" required />
        <span asp-validation-for="EconomyPrice" class="text text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Flight_BusinessPrice">Business Price</label>
        <input type="number" id="Flight_BusinessPrice" class="form-control" asp-for="BusinessPrice" required />
        <span asp-validation-for="BusinessPrice" class="text text-danger"></span>

    </div>
    <div class="form-group">
        <label for="Flight_ArrivalDate">Arrival Time</label>
        <input type="date" id="Flight_ArrivalDate" class="form-control" asp-for="FlightDate" required />
        <span asp-validation-for="FlightDate" class="text text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Flight_DepartureDate">Departure Time</label>
        <input type="time" id="Flight_DepartureDate" class="form-control" asp-for="DepartureTime" required />
        <span asp-validation-for="DepartureTime" class="text text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Flight_ArrivalDate">Arrival Time</label>
        <input type="time" id="Flight_ArrivalDate" class="form-control" asp-for="ArrivalTime" required />
        <span asp-validation-for="ArrivalTime" class="text text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Sumbit</button>
</form>